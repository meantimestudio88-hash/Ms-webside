rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Projects images - read for public, write for authenticated
    match /projects/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Designer images - read for public, write for authenticated
    match /designers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
